{
  "$schema": "http://json.schemastore.org/package",
  "name": "@xyo-network/xyo-js",
  "private": true,
  "scripts": {
    "build": "yarn build:base-js &&  yarn build:base-node && yarn build:core-js && yarn build:archivist && yarn build:cli",
    "clean": "yarn clean:base-js &&  yarn clean:base-node && yarn clean:core-js && yarn clean:archivist && yarn clean:cli",
    "lint": "yarn lint:base-js &&  yarn lint:base-node && yarn lint:core-js && yarn lint:archivist && yarn lint:cli",
    "fix": "yarn fix:base-js &&  yarn fix:base-node && yarn fix:core-js && yarn fix:archivist && yarn fix:cli",
    "build:base-js": "yarn workspace @xyo-network/sdk-base-js build",
    "lint:base-js": "yarn workspace @xyo-network/sdk-base-js lint",
    "fix:base-js": "yarn workspace @xyo-network/sdk-base-js fix",
    "start:base-js": "yarn workspace @xyo-network/sdk-base-js start",
    "clean:base-js": "yarn workspace @xyo-network/sdk-base-js clean",
    "build:base-node": "yarn workspace @xyo-network/sdk-base-nodejs build",
    "lint:base-node": "yarn workspace @xyo-network/sdk-base-nodejs lint",
    "fix:base-node": "yarn workspace @xyo-network/sdk-base-nodejs fix",
    "start:base-node": "yarn workspace @xyo-network/sdk-base-nodejs start",
    "clean:base-node": "yarn workspace @xyo-network/sdk-base-nodejs clean",
    "build:core-js": "yarn workspace @xyo-network/sdk-core-js build",
    "lint:core-js": "yarn workspace @xyo-network/sdk-core-js lint",
    "fix:core-js": "yarn workspace @xyo-network/sdk-core-js fix",
    "start:core-js": "yarn workspace @xyo-network/sdk-core-js start",
    "clean:core-js": "yarn workspace @xyo-network/sdk-core-js clean",
    "build:archivist": "yarn workspace @xyo-network/sdk-archivist-nodejs build",
    "lint:archivist": "yarn workspace @xyo-network/sdk-archivist-nodejs lint",
    "fix:archivist": "yarn workspace @xyo-network/sdk-archivist-nodejs fix",
    "start:archivist": "yarn workspace @xyo-network/sdk-archivist-nodejs start",
    "clean:archivist": "yarn workspace @xyo-network/sdk-archivist-nodejs clean",
    "build:cli": "yarn workspace @xyo-network/cli-nodejs build",
    "lint:cli": "yarn workspace @xyo-network/cli-nodejs lint",
    "fix:cli": "yarn workspace @xyo-network/cli-nodejs fix",
    "start:cli": "yarn workspace @xyo-network/cli-nodejs start",
    "clean:cli": "yarn workspace @xyo-network/cli-nodejs clean",
    "reinstall": "yarn clean && yarn install"
  },
  "workspaces": [
    "base-js",
    "base-nodejs",
    "core-js",
    "core-nodejs",
    "cli",
    "archivist"
  ],
  "dependencies": {
    "@xyo-network/sdk-archivist-nodejs": "*",
    "@xyo-network/sdk-base-js": "*",
    "@xyo-network/sdk-base-nodejs": "*",
    "@xyo-network/sdk-core-js": "*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-no-secrets": "^0.6.8",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-sort-export-all": "^1.0.5",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-workspaces": "^0.6.2",
    "prettier": "2.1.2",
    "typescript": "^4.0.5"
  }
}
